<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bank_card_item_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginRight="7dp"
              android:layout_marginLeft="7dp"
              android:layout_marginBottom="5dp"
              android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bank_card_image"
            app:civ_border_color="#E8E8E8"
            app:civ_border_width="3dp"
            app:civ_fill_color="#E8E8E8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/bank_card_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/bank_card_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/bank_card_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>