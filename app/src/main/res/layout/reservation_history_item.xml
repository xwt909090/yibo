<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp">

    <TextView
            android:id="@+id/reservation_history_parking_lot_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#CD950C"/>

    <TextView
            android:id="@+id/reservation_history_parking_lot_num_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EEAD0E"/>
    <TextView
            android:id="@+id/reservation_history_parking_spot_num_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EEAD0E"/>
    <TextView
            android:id="@+id/reservation_history_car_num_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EEAD0E"/>
    <TextView
            android:id="@+id/reservation_history_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EEAD0E"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"
            android:layout_marginTop="5dp"/>

</LinearLayout>